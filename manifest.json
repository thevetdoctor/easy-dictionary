{
  "manifest_version": 2,
  "name": "Easy Dictionary",
  "description": "This extension helps users find the meaning of words from any web-page",
  "version": "0.0.1",
  "icons": {
    "16": "assets/img/icon.png",
    "32": "assets/img/icon.png",
    "64": "assets/img/icon.png"
  },
  "browser_action": {
    "default_icon": "assets/img/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["assets/js/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' https://easy-dictionary.firebaseio.com/; object-src 'self'"
}